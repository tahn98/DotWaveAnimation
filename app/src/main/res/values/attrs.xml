<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DotWave">
        <attr name="dw_size" format="dimension" />
        <attr name="dw_color" format="color" />
        <attr name="dw_strokeWidth" format="dimension" />
        <attr name="dw_radius" format="dimension" />
        <attr name="dw_duration" format="integer" />
        <attr name="dw_rippleAmount" format="integer" />
        <attr name="dw_scale" format="float" />
        <attr name="dw_alpha" format="float" />
        <attr name="dw_type" format="enum">
            <enum name="fillRipple" value="0" />
            <enum name="strokeRipple" value="1" />
        </attr>

    </declare-styleable>

    <declare-styleable name="ShapeRipple">
        <attr name="dot_color" format="color" />
        <attr name="dot_size" format="dimension" />
        <attr name="ripple_color" format="color" />
        <attr name="enable_single_ripple" format="boolean" />
        <attr name="ripple_duration" format="integer" />
        <attr name="enable_color_transition" format="boolean" />
        <attr name="enable_stroke_style" format="boolean" />
        <attr name="ripple_from_color" format="color" />
        <attr name="ripple_to_color" format="color" />
        <attr name="ripple_stroke_width" format="dimension" />
        <attr name="ripple_maximum_radius" format="dimension" />
        <attr name="ripple_count" format="integer" />
    </declare-styleable>

